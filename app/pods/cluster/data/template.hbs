<div class='cluster-information-container'>
  {{#dashboard-module class='medium-width'}}
    {{dashboard-module-header label='Cluster Properties'}}
    {{#dashboard-module-body}}
      <table class="key-value-table">
      <tbody>
      <tr>
        <td class="key">Development Mode</td>
        <td class="value">
          {{#if model.developmentMode}}
            On
          {{else}}
            Off
          {{/if}}
        </td>
      </tr>
      <tr>
        <td class="key">Edition Type</td>
        <td class="value">
          {{#if model.isEnterpriseEdition}}
            Enterprise
          {{else}}
            {{#if model.isOpenSourceEdition}}
              Open Source
            {{else}}
              {{model.riakType}}
            {{/if}}
          {{/if}}
        </td>
      </tr>
      <tr>
        <td class="key">Status</td>
        <td class="value"><span class="cluster-status cluster-status-label {{model.status}}">{{model.status}}</span></td>
      </tr>
      </tbody>
    </table>
    {{/dashboard-module-body}}
  {{/dashboard-module}}

  {{#dashboard-module class='medium-width'}}
    {{dashboard-module-header label='Active Bucket Types'}}
    {{#dashboard-module-body}}
      {{#if model.activeBucketTypes}}
        {{bucket-types
        clusterId=model.clusterId
        bucketTypes=model.activeBucketTypes}}
      {{else}}
        <p>No bucket types have been activated</p>
      {{/if}}
    {{/dashboard-module-body}}
  {{/dashboard-module}}

  {{#dashboard-module class='medium-width'}}
    {{dashboard-module-header label='Inactive Bucket Types'}}
    {{#dashboard-module-body}}
      {{#if model.inactiveBucketTypes}}
        {{bucket-types
        clusterId=model.clusterId
        bucketTypes=model.inactiveBucketTypes}}
      {{else}}
        <p>No inactive buckets</p>
      {{/if}}
    {{/dashboard-module-body}}
  {{/dashboard-module}}
</div>


