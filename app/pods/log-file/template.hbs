<div class='view-header'>
  {{breadcrumb-component
  subSection='ops'
  clusterId=model.node.cluster.id
  nodeId=model.node.id
  logId=model.fileId}}
  {{view-label
  pre-label='Log Detail'
  label=model.fileId}}
</div>

{{#dashboard-module}}
  <header class="module-header">
    {{#if model.moreLinesThanPageSize}}
      File output from
      <code>tail -n {{model.pageSize}}</code>
      <span class="mini-label">({{model.totalLines}} total lines)</span>
    {{else}}
      File output
      <span class="mini-label">({{model.totalLines}} total lines)</span>
    {{/if}}

    <div class="action-buttons">
      <span class="refresh action-button" {{action 'refreshLogFile' model}}>
        <span class={{if isRefreshing 'glyphicon glyphicon-refresh glyphicon-spin' 'glyphicon glyphicon-refresh'}} aria-hidden="true"></span>
        Refresh {{model.fileId}}
      </span>
    </div>
  </header>

  {{#code-highlighter language-type='js'}}
    {{model.content}}
  {{/code-highlighter}}
{{/dashboard-module}}


