{{#dashboard-module.container class='medium-width'}}
  {{#dashboard-module.header label='New Bucket Type'}}
    <div class="module-actions">
      <span class="create action-button" {{action 'createBucketType'}}>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Create Bucket Type
      </span>

      {{#link-to 'cluster.data' model.name class='cancel action-button'}}
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        Cancel
      {{/link-to}}
    </div>
  {{/dashboard-module.header}}

  {{#dashboard-module.body}}
    <form>
      <div class="form-group">
        <label>Bucket Type Name</label>
        {{input value=bucketTypeName class='form-control'}}
      </div>
      {{!--<div class="form-group">--}}
        {{!--<label>Schema XML</label>--}}
        {{!--{{textarea rows=10 class='form-control'}}--}}
      {{!--</div>--}}
    </form>
  {{/dashboard-module.body}}
{{/dashboard-module.container}}
