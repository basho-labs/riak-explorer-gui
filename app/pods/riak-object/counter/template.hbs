{{#dashboard-module class='object-counter-container half'}}
  {{#dashboard-module-header label='Object Details'}}
    {{#if model.isLoaded}}
      <div class="module-actions">
        <button type="button" class="action-button delete"
          {{action 'deleteObject' model}}>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          Delete Counter
        </button>
      </div>
    {{/if}}
  {{/dashboard-module-header}}
  {{#dashboard-module-body}}
    {{#if model.isLoaded}}
      {{object-contents-counter
      model=model
      incrementCounter="incrementCounter"
      decrementCounter="decrementCounter"}}
    {{else}}
      {{loading-spinner}}
    {{/if}}
  {{/dashboard-module-body}}
{{/dashboard-module}}