<div class='view-header'>
  {{breadcrumb-component
  subSection='query'
  clusterId=model.cluster.id
  schemaName=model.name
  }}
  {{view-label
  pre-label='Search Schema'
  label=model.name}}
</div>

{{#dashboard-module}}
  <div class="schema-actions">
    {{#link-to 'search-schema.edit' model.cluster.id model.name class='edit schema-action' }}
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      Edit Schema
    {{/link-to}}
    <a href={{model.url}} target="_blank" class='raw schema-action'>
      <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
      View Raw
    </a>
  </div>
  {{#code-highlighter language-type='XML'}}
    {{model.content}}
  {{/code-highlighter}}
{{/dashboard-module}}
