{{!--{{view-label--}}
{{!--pre-label='Search Schema'--}}
{{!--label=model.name}}--}}
{{#dashboard-module}}
  <header class="module-header">
    <div class="action-buttons">
      {{#link-to 'search-schema.edit' model.cluster.id model.name class='edit action-button' }}
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit Schema
      {{/link-to}}

      <a href={{model.url}} target="_blank" class='raw action-button'>
        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        View Raw
      </a>
    </div>
  </header>

  {{#code-highlighter language-type='XML'}}
    {{model.content}}
  {{/code-highlighter}}
{{/dashboard-module}}
