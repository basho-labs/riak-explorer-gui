{{#dashboard-module.container}}
  {{#dashboard-module.header}}
    <span>&nbsp;</span>
    <div class="module-actions">
      {{#link-to 'search-schema.edit' model.cluster.name model.name class='edit action-button' }}
        <span class="ion-edit" aria-hidden="true"></span>
        Edit Schema
      {{/link-to}}

      <a href={{model.url}} target="_blank" class='raw action-button'>
        <span class="ion-eye" aria-hidden="true"></span>
        View Raw
      </a>
    </div>
  {{/dashboard-module.header}}
  {{#dashboard-module.body}}
    {{#if model.content}}
      {{code-highlighter
        lang='XML'
        code=model.content}}
    {{/if}}
  {{/dashboard-module.body}}
{{/dashboard-module.container}}
