<div class="container set-contents-list">
  <h5>Registers ({{model.registersList.length}})</h5>

  {{#each model.registersList as | register |}}
    <div class="row set-element-row">
      <div class="col-md-1">
        <button type="button" class="btn btn-xs btn-danger"
          {{action 'removeField' model register}}>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </button>
      </div>
      <div class="col-md-3 field-label">
        <strong>{{register.name}}</strong>
      </div>
      <div class="col-md-8">
        <button type="button" class="btn btn-xs btn-primary"
          {{action 'editField' model register}}>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button>
        <code>
          {{register.value}}
        </code>
      </div>
    </div>
  {{/each}}

  <div class="row set-element-row">
    <div class="col-md-4 text-right">
      {{input value=fieldToAddName class="form-control" placeholder="field name"}}
    </div>
    <div class="col-md-8">
      {{input value=fieldToAddValue class="form-control" placeholder="value"}}
      <button type="button" class="btn btn-sm btn-primary"
        {{action 'addField' model}}>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Add Register
      </button>
    </div>
  </div>
</div>
