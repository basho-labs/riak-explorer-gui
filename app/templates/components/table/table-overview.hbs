<tr>
  <td class='key'>Table Name</td>
  <td class='value'>{{table.name}}</td>
</tr>

<tr>
  <td class='key'>Activated</td>
  <td class='value'>
    {{#if table.isActive}}
      <span class="label label-success">Active</span>
    {{else}}
      <span class="label label-default">Inactive</span>
    {{/if}}
  </td>
</tr>

<tr>
  <td class='key'>Partition Key</td>
  <td class='value'>
    <code class="comma-list">[{{#each table.partitionKey as |key|}}<span class="item">{{key.name}}</span>{{/each}}]</code>
  </td>
</tr>

<tr>
  <td class='key'>Local Key</td>
  <td class='value'>
    <code class="comma-list">[{{#each table.localKey as |key|}}<span class="item">{{key}}</span>{{/each}}]</code>
  </td>
</tr>

<tr>
  <td class='key'>Columns</td>
  <td class='value'>
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>position</th>
        <th>optional</th>
      </tr>
      </thead>
      <tbody>
      {{#each table.columns as |column|}}
        <tr>
          <td><code>{{column.name}}</code></td>
          <td><code>{{column.type}}</code></td>
          <td><code>{{column.position}}</code></td>
          <td><code>{{column.optional}}</code></td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </td>
</tr>

