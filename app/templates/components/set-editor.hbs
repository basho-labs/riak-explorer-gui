{{#each contents as |item|}}
  <li>
    <code>{{item}}</code>
    <button type="button" class="remove-item"
      {{action 'removeElement' item}}>
      <span class="ion-trash-a" aria-hidden="true"></span>
    </button>
  </li>
{{/each}}
<li>
  {{input value=(mut newItem) class="input-add-item"}}
  <button type="button" class="button-add-item" {{action 'addElement' newItem}}>
    <span class="ion-plus-round" aria-hidden="true"></span>
    Add Item
  </button>
</li>
